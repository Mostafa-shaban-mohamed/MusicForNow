@model MusicForNow.Models.Song

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="col-lg-6 col-md-6 col-sm-6">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>

            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.ReleaseDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Album1.Album_Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Album1.Album_Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Artist1.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Artist1.Name)
            </dd>
        </dl>
    </div>
    
    <div class="col-lg-6 col-md-6 col-sm-6">
        @{
            string imreBase64Data = Convert.ToBase64String(Model.Image);
            string imgDataURL = string.Format("data:image/png;base64,{0}", imreBase64Data);
        }
        <img src="@imgDataURL" alt="Avatar" style="width:100%">
        <br />
        <br />
    </div>
    @if (User.IsInRole("Admin"))
    {
        <p class="left">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Song_ID }, new { @class = "btn btn-warning" }) &ensp;
            @Html.ActionLink("Delete", "Delete", new { id = Model.Song_ID }, new { @class = "btn btn-danger" })
        </p>
    }
</div>